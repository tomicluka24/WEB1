@model PR141_2017_WebProjekat.Models.Korisnik
@{
    ViewBag.Title = "Izmeni podatke";
}
@ViewBag.GreskaIzmena
@TempData["IzmenaGreska"]

<h2>Izmeni podatke</h2>

<form action="~/Autentifikacija/IzmeniPodatke" method="post">
    <table>
        <tr>
            <td>Korisnicko ime:</td>
            <td><input name="korisnickoIme" value="@Model.KorisnickoIme" readonly /></td>
        </tr>
        <tr>
            <td>Ime:</td>
            <td><input type="text" name="ime" /></td>
        </tr>
        <tr>
            <td>Prezime:</td>
            <td><input type="text" name="prezime" /></td>
        </tr>

        <tr>
            <td>Lozinka:</td>
            <td><input type="text" name="lozinka" /></td>
        </tr>
        <tr>
            <td>Pol:</td>
            <td><input type="text" name="pol" /></td>
        </tr>
        <tr>
            <td>Datum rodjenja:</td>
            <td><input type="date" name="datumRodjenja" /></td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Izmeni podatke" />
            </td>
        </tr>
    </table>
</form>